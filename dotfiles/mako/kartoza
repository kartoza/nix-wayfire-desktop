# Mako notification daemon configuration
# Kartoza theme

anchor=bottom-right
layer=overlay
font=sans-serif 10
background-color=#2D353B
height=800
text-color=#d3c6aa
margin=4,4,20
padding=15
border-size=5
border-radius=10
border-color=#DF9E2F
default-timeout=3000
max-visible=2
group-by=summary
icon-path=/run/current-system/sw/share/icons/Papirus
icons=1
on-notify=exec /run/current-system/sw/bin/mpv ~/.config/mako/sounds/notification.wav

# Enable action buttons for notifications (required for bluetooth pairing)
actions=1

# Button bindings
on-button-left=invoke-default-action
on-button-right=dismiss


[grouped]
format=<b>%s (%g)</b>\n%b

# Non-actionable notifications
[actionable=false]
default-timeout=3000

# Actionable notifications (like bluetooth pairing) styling
# These should be visible immediately since they require user interaction
[actionable]
border-color=#569FC6
background-color=#2D353B
default-timeout=0

# Critical/error notifications - red border
[urgency=critical]
border-color=#E67E80
background-color=#2D353B
default-timeout=0

# Normal notifications - kartoza orange border  
[urgency=normal]
border-color=#DF9E2F
background-color=#2D353B
default-timeout=3000

# Warning/low urgency notifications - kartoza blue border
[urgency=low]
border-color=#569FC6
background-color=#2D353B
default-timeout=3000

# Do Not Disturb mode - completely disables the service
[mode=dnd]
border-color=#0fff0f

