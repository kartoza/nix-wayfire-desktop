# Show indicator with caps lock status
indicator-caps-lock

# Date and time display (swaylock-effects feature)
clock
timestr=%H:%M
datestr=%A, %B %d

# Use the same wallpaper as the desktop
image=/etc/wallpapers/kartoza.png
scaling=fill

# Effect options for swaylock-effects
effect-blur=7x5
effect-vignette=1.0:1.0
fade-in=0.2

# Font configuration - Nunito for everything
font=Nunito
font-size=48

# Show keyboard layout
show-keyboard-layout

# Indicator always visible to show clock
indicator-idle-visible

# Kartoza Theme Colors
# Primary blue: #569FC6
# Accent orange: #DF9E2F
# Dark background: #162127, #0D1A1F
# Light text: #E6F7F6

# Ring and indicator settings
indicator-radius=250
indicator-thickness=35

# Default state (locked, waiting for input)
ring-color=569FC6
inside-color=162127CC
text-color=E6F7F6
line-color=162127

# Verifying state (checking password/fingerprint)
ring-ver-color=DF9E2F
inside-ver-color=0D1A1FDD
text-ver-color=E6F7F6
line-ver-color=DF9E2F

# Wrong password state
ring-wrong-color=D32F2F
inside-wrong-color=0D1A1FDD
text-wrong-color=E6F7F6
line-wrong-color=D32F2F

# Caps lock state
ring-caps-lock-color=DF9E2F
inside-caps-lock-color=162127CC
text-caps-lock-color=DF9E2F

# Key highlight (when typing)
key-hl-color=569FC6

# Backspace highlight
bs-hl-color=D32F2F

# Separator color
separator-color=00000000

# Layout text color
layout-text-color=E6F7F6
layout-bg-color=00000000
